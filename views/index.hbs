
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="css/style-homepage.css"/>
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel ="stylesheet"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Co-WorkBook Home page</title>
    </head>
 

	<body>
	<!-- sidebar -->
		{{> sidebar}}
	<!-- sidebars ends -->
	
	<!-- main feed starts -->
		<div class="feed">
			<div class="feed_header">
				<h2>Home</h2>
			</div>
			<!-- Post box starts -->		
			<div class="postBox">
			<form action="/createPost" method ="POST">
				{{log this}}
				<div class="postBox_post">
					<img src={{homepageData.profilePicture}} alt=""/>
					<input type="text" placeholder="Trying to get a job/recruit? Let it be known!">
				</div>
				<button class="postBox_button">Post</button>
			</form>
			</div>	
			<!-- Post box ends -->	
			{{#each homepageData.postArray}}
				{{> posts}}
			{{else}}
				<p> There are no posts </p>
			{{/each}}
			
		</div>		
	<!-- main feed ends -->
	
	</body>
 
</html>