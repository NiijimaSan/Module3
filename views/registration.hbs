<html>
	<head>
		<meta charset="utf-8">
		<title>Register Co-WorkBook Account</title>
		<link rel="stylesheet" href="/css/style-reg.css">
	</head>
	
	{{!-- THIS IS WHERE WE ADD OUR USERS --}}
	<body>
	<div class="container">
	<header>Register Account</header>
		{{> messages}}

		{{!-- <form action="/saveUser" method ="POST">  --}}
		<form action="/register" method ="POST"> 
		<div class="user-details">

		<!-- Entering Username (e.g. joshtan)-->
			<div class="input-box">
				<label for="username">Username: </label>
                <input type="text" class="form-control" id="username" placeholder="Enter Username" name="username" required>
			</div>

		<!-- Entering Email (e.g. joshuatan@yahoo.com)-->
			<div class="input-box">
				<label for="email">Email: </label>
                <input type="email" class="form-control" id="email" placeholder="Enter Email" name="email" required>
			</div>

		{{!-- Entering Password (e.g. 12345)--}}
			<div class="input-box">
				<label for="password">Password: </label>
                <input type="password" class="form-control" id="password" placeholder="Enter Password" name="password" required>
			</div>

		{{!-- Confirming Password (e.g. 12345)--}}
			<div class="input-box">
				<label for="confirm_password">Confirm Password: </label>
				<input type="password" class="form-control" id="confirm_password" placeholder="Confirm you password here" name="confirm_password" required>
			</div>
			
				<div class="button">
					<input type="submit" value="Register">
				</div>	
			</div>

			<div class="signup_link">Already have an account? <a href="/login">Login</a></div>
		</form>
	</div>
	</body>

<html>